
<%= form_with model:@user, local:true do |f| %>
<% if @user.errors.any? %>
  <div id=“error_explanation”>
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
  </div>
<% end %>
<p id="notice">
 <%= flash[:notice]  %>
</p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <div class="form-group">
           <%= f.label :name %>
           <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Image %></br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <%= f.label :Introduction%>
            <%= f.text_area :introduction, class:"form-control"%>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-secondary">Update User </button>
          </div>
      </div>
    </div>
  </div>
<% end %>

