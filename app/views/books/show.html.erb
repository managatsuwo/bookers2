<h2 class="mt-3">New book</h2>
    <% if @new_book.errors.any? %>
      <div id=“error_explanation”>
        <h2><%= @new_book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
             <% @new_book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
            </ul>
        </div>
    <% end %>

<p id="notice">
 <%= flash[:notice]  %>
</p>
<div class= "container" px-5 px-sm0 >
    <div class="row">
        <div class="col-md-3">
          <%= render 'users/user', user: @book.user %>
          <%= render 'books/book', book: @new_book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>
                         <%= link_to user_path(@book.user) do  %>
                         <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg' , fallback: "no_image.jpg", size:'40x40'%><br>
                         <%= @book.user.name %>
                         <% end %>
                        </td>
                         <td><%=link_to @book.title, book_path(@book.id) %></td>
                         <td><%= @book.body %></td>
                         <% if @book.user.id == current_user.id %>
                         <td><%= link_to "edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
                         <!--<<%= button_to 'ユーザー登録', {controller: 'users', action: 'new'}, {method: :get }%>-->-->-->

                         <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に　消しますか?" %></td>
                        </td>
                     <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
